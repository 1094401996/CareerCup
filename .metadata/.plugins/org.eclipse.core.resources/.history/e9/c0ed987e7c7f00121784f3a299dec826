package split;

import java.util.ArrayList;


public class Split {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		  StringBuffer str= new StringBuffer("  you are really stupid ");
		  char s = '@';
		  ArrayList result =split(str,s);
		  for (int i = 0; i < result.size();i++){
			  System.out.println(result.get(i));
		  }
		  System.out.println(str.toString());
	}
	
	public static ArrayList split(StringBuffer str, char s){
		ArrayList list = new ArrayList();
		boolean flag = true;
		int start = 0;
		for(int i = 0 ; i < str.length(); i ++){
			if(str.charAt(i) == s){
				if(flag ==false){	
					list.add(new String(str.substring(start,i)));
					reverse(str,start,i);
				}
				flag = true;
			}else{
				if(flag == true){
					start = i;
				}
				flag = false;
			}
		}
		
		return list;
	}
	private static void reverse(StringBuffer str, int low, int high){
		for (int i = low; i < (high - low + 1)/2 ; i++){
			char temp = str.charAt(i);
			str.setCharAt(i, str.charAt(high - (i - low)));
			str.setCharAt(high - (i - low), temp);
		}
	}

}