package elevendot2;

import sortingAlgorithms.QuickSort;

public class SignitureString {
	StringBuffer str;
	StringBuffer Signatue;
	
	
	public SignitureString(StringBuffer str){
		this.str = str;
		this.Signatue = getSignitrue(str);
	}
	
	private StringBuffer getSignitrue(StringBuffer str){
		Character[] arr = new Character[str.length()];
		for(int i = 0 ; i < arr.length; i++){
			arr[0] = new Character(str.charAt(i));
		}
		QuickSort<Character> qs = new QuickSort<Character>();
		qs.sort(arr);
		for(int i = 0; i < arr.length; i++){
			str.setCharAt(i, arr[i]);
		}
		
		return str;
	}
}
