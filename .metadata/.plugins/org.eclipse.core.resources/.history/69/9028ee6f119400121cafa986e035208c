package fivedot2;

public class DoubleRepresentation {
	public static void main(String[] args){
		double[] num = {0.4, 0.5, 0.11, 0.23};
		for (double val : num){
			System.out.println(doublerepresentation(val));
		}
	}
	
	public static String doublerepresentation(double  num){
		if (num >= 1 || num <= 0){
			return "ERRFOR";
		}
		StringBuffer binary = new StringBuffer();
		binary.append("0");
		binary.append(".");
		
		while(num != 0){
			if(binary.length() > 32){
				return "ERROR";
			}
			double r = num * 2;
			if (r >= 1){
				binary.append(1);
				num = r - 1;
			}else{
				binary.append(0);
				num = r;
			}
		}
		return binary.toString();
	}

}
