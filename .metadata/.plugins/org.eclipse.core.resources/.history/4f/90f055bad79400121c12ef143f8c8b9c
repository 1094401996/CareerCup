package Graph;

public class DirectedDFS {
	private boolean [] marked ;
	private int[] edgeTo;
	private int s;
	
	public DirectedDFS(Digraph G , int s){
		marked = new boolean[G.V()];
		edgeTo = new int[G.V()];
		this.s = s;
		dfs(G,s);
	}
	
	private void dfs(Digraph G, int v){
		marked[v] = true;
		for(int w : G.adj(v)){
			if(!marked[w]){
				dfs(G,w);
			}
		}
	}
	public boolean marked(int v){
		return marked[v];
	}
	
}
