package elevendot2;

import java.util.Collections;

import sortingAlgorithms.QuickSort;

public class SignitureString {
	StringBuffer str;
	StringBuffer Signatue;
	
	
	public SignitureString(StringBuffer str){
		this.str = str;
		this.Signatue = getSigniture(str);
	}
	
	private static StringBuffer getSigniture(StringBuffer str){
		Character[] arr = new Character[str.length()];
		for(int i = 0 ; i < arr.length; i++){
			arr[0] = new Character(str.charAt(i));
		}
		QuickSort<Character> qs = new QuickSort<Character>();
		qs.sort(arr);
		for(int i = 0; i < arr.length; i++){
			str.setCharAt(i, arr[i]);
		}
		
		return str;
	}
	
	public static void main(String[] args){
//		StringBuffer str = new StringBuffer("cba");
//		System.out.println(getSigniture(str));
		
		
		Character [] arr = new Character[3];
		arr[0] = 'c';
		arr[1] =  'b';
		arr[2] = 'a';
		QuickSort<Character> qs = new QuickSort<Character>();
		qs.sort(arr);
		System.out.println(arr[0]);
	}
}
